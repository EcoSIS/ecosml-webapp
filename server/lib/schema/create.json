{
    "id": "/CreatePackage",
    "type": "object",
    "properties": {
      "name" : {
        "type" : "string",
        "format" : "packageName"
      },
      "fullName" : {
        "type" : "string",
        "format" : "packageFullName"
      },
      "repoOrg" : {
        "type" : "string"
      },
      "source": {
        "type": "string",
        "enum" : ["registered", "managed"]
      },
      "host" : {
        "type" : "string",
        "enum" : ["github", "gitlab", "bitbucket"]
      },
      "organization": {
        "type" : "string"
      },
      "owner" : {
        "type" : "string"
      },
      "overview" : {
        "type": "string"
      },
      "description" : {
        "type" : "string"
      },
      "website" : {
        "type" : ["array","string"]
      },
      "keywords" : {
        "type" : "array",
        "items": {"type": "string"}
      },
      "theme" : {
        "type" : "String"
      },
      "family" : {
        "type" : "string"
      },
      "specific" : {
        "type" : "string"
      },
      "language" : {
        "type" : "string"
      },
      "packageType" : {
        "type" : "string",
        "enum" : ["standalone", "package"]
      },
      "releases" : {
        "type" : "array"
      },
      "releaseCount" : {
        "type": "integer"
      }
    },
    "additionalProperties": false,
    "required": ["name", "host", "repoOrg", "fullName", "source", "organization", "overview", "owner", "packageType", "language"]
  }